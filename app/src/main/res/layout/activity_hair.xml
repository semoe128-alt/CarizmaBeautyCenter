<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- الصورة الخلفية تغطي كامل الشاشة -->
    <ImageView
        android:id="@+id/fullScreenImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/your_fullscreen_image"
        android:contentDescription="Background Image" />

    <!-- ScrollView مع تباعد محسّن -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:paddingHorizontal="24dp"
        android:paddingTop="80dp"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- عنوان الخدمة -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hair Styling"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#E91E63"
                android:layout_marginBottom="32dp"
                android:textAlignment="center" />

            <!-- وصف الخدمة -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="في Carizma Beauty Center نقدم أفضل خدمات تصفيف الشعر والعناية به، باستخدام أحدث المنتجات وأفضل الفنيين لضمان مظهر رائع وصحي دائمًا."
                android:textColor="#371020"
                android:textSize="20sp"
                android:lineSpacingExtra="8dp"
                android:textAlignment="center"
                android:layout_marginBottom="40dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
